{
    "name": "gestalt-ui",
    "version": "1.0.0",
    "title": "Galactic Fog",
    "description": "gestalt ui",
    "engines": {
        "node": ">=8.1.2"
    },
    "repository": {
        "type": "git",
        "url": "git@gitlab.com:galacticfog/gestalt-ui-react.git"
    },
    "author": "Galactic Fog Ui Team",
    "license": "Private",
    "scripts": {
        "dev": "cross-env NODE_ENV=development webpack-dev-server --env=development --progress --colors",
        "build": "cross-env NODE_ENV=production webpack --env=production --progress --colors",
        "test": "cross-env NODE_ENV=test karma start --single-run",
        "test-coverage": "cross-env NODE_ENV=test karma start --single-run && open './coverage/PhantomJS 2.1.1 (Mac OS X 0.0.0)/lcov-report/index.html'",
        "test-tdd": "cross-env NODE_ENV=test karma start --auto-watch",
        "test-browser": "cross-env NODE_ENV=test karma start --single-run --browsers 'PhantomJS,Chrome,Firefox,Safari'",
        "analyze": "yarn stats && webpack-bundle-size-analyzer build-stats.json",
        "stats": "webpack --profile --json > build-stats.json",
        "check-circular": "madge --format es6 --circular --warning --extensions js,jsx --webpack-config webpack.config.js src/",
        "node-purge": "rm -rf node_modules",
        "node-reinstall": "yarn node-purge && yarn install",
        "node-packages": "npm list --depth=0",
        "node-killall": "killall node"
    },
    "babel": {
        "compact": "auto",
        "presets": [
            [
                "latest",
                {
                    "es2015": {
                        "modules": false
                    }
                }
            ],
            "react"
        ],
        "env": {
            "development": {
                "plugins": [
                    "react-hot-loader/babel"
                ]
            },
            "test": {
                "plugins": [
                    [
                        "istanbul",
                        {
                            "useInlineSourceMaps": false,
                            "exclude": [
                                "**/*.test*.js*"
                            ]
                        }
                    ]
                ]
            },
            "production": {}
        },
        "plugins": [
            "transform-object-rest-spread",
            "transform-object-assign",
            "transform-class-properties"
        ]
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "comma-dangle": 0,
            "no-useless-constructor": 0,
            "class-methods-use-this": 0,
            "import/prefer-default-export": 0,
            "import/no-webpack-loader-syntax": 0,
            "import/no-extraneous-dependencies": 0,
            "import/extensions": 0,
            "react/require-extension": 0,
            "react/jsx-boolean-value": 0,
            "react/forbid-prop-types": 0,
            "react/prefer-stateless-function": 0,
            "react/jsx-filename-extension": 0,
            "react/no-array-index-key": 0,
            "max-len": 0,
            "new-cap": [
                2,
                {
                    "capIsNewExceptions": [
                        "Map",
                        "List"
                    ]
                }
            ],
            "jsx-a11y/no-marquee": 0
        },
        "extends": "airbnb",
        "plugins": [
            "import"
        ],
        "env": {
            "browser": true,
            "mocha": true,
            "jasmine": true,
            "es6": true
        },
        "settings": {
            "import/resolver": {
                "webpack": {
                    "config": "webpack.config.js"
                }
            }
        }
    },
    "stylelint": {
        "extends": "stylelint-config-standard",
        "rules": {
            "color-hex-case": "upper",
            "string-quotes": "single",
            "font-family-name-quotes": "single-where-recommended",
            "indentation": 2
        }
    },
    "esformatter": {
        "preset": "default",
        "indent": {
            "value": "  ",
            "FunctionExpression": 1,
            "ArrayExpression": 1,
            "ObjectExpression": 1
        },
        "whiteSpace": {
            "after": {
                "FunctionReservedWord": 1
            }
        },
        "plugins": [
            "esformatter-quotes",
            "esformatter-braces",
            "esformatter-semicolons",
            "esformatter-dot-notation",
            "esformatter-jsx"
        ],
        "quotes": {
            "type": "single",
            "avoidEscape": true
        }
    },
    "esformatter-jsx": {},
    "browserslist": [
        "> 1%",
        "last 2 versions"
    ],
    "devDependencies": {
        "autoprefixer": "^7.1.2",
        "babel-core": "^6.25.0",
        "babel-eslint": "^7.2.3",
        "babel-loader": "^7.1.1",
        "babel-plugin-istanbul": "^4.1.4",
        "babel-plugin-react-intl": "^2.3.1",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-plugin-transform-object-assign": "^6.22.0",
        "babel-plugin-transform-object-rest-spread": "^6.23.0",
        "babel-polyfill": "^6.23.0",
        "babel-preset-latest": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "bundle-loader": "^0.5.5",
        "chai": "^3.5.0",
        "circular-dependency-plugin": "^3.0.0",
        "clean-webpack-plugin": "^0.1.16",
        "compression-webpack-plugin": "^0.4.0",
        "cross-env": "^5.0.1",
        "css-loader": "^0.28.4",
        "enzyme": "^2.9.1",
        "esformatter": "^0.10.0",
        "esformatter-braces": "^1.2.1",
        "esformatter-dot-notation": "^1.3.1",
        "esformatter-jsx": "^8.0.1",
        "esformatter-quotes": "^1.1.0",
        "esformatter-semicolons": "^1.1.2",
        "eslint": "^3.19.0",
        "eslint-config-airbnb": "^15.0.2",
        "eslint-import-resolver-webpack": "^0.8.3",
        "eslint-loader": "^1.9.0",
        "eslint-plugin-import": "^2.7.0",
        "eslint-plugin-jsx-a11y": "^5.0.3",
        "eslint-plugin-react": "^7.1.0",
        "extract-text-webpack-plugin": "^3.0.0",
        "file-loader": "^0.11.2",
        "html-webpack-plugin": "^2.29.0",
        "json-loader": "^0.5.7",
        "karma": "^1.7.0",
        "karma-chai": "^0.1.0",
        "karma-chai-plugins": "^0.9.0",
        "karma-chrome-launcher": "^2.2.0",
        "karma-coverage": "^1.1.1",
        "karma-firefox-launcher": "^1.0.1",
        "karma-mocha": "^1.3.0",
        "karma-mocha-reporter": "^2.2.3",
        "karma-phantomjs-launcher": "^1.0.4",
        "karma-safari-launcher": "^1.0.0",
        "karma-sinon": "^1.0.5",
        "karma-sinon-chai": "^1.3.1",
        "karma-sourcemap-loader": "^0.3.7",
        "karma-webpack": "^2.0.4",
        "mocha": "^3.4.2",
        "node-sass": "^4.5.3",
        "phantomjs-prebuilt": "^2.1.14",
        "postcss-loader": "^2.0.6",
        "raw-loader": "^0.5.1",
        "react-hot-loader": "next",
        "sass-loader": "^6.0.6",
        "sinon": "^2.3.8",
        "style-loader": "^0.18.2",
        "url-loader": "^0.5.9",
        "webpack": "^3.3.0",
        "webpack-bundle-analyzer": "^2.8.3",
        "webpack-dev-server": "^2.6.1",
        "webpack-merge": "^4.1.0",
        "yaml-loader": "^0.5.0"
    },
    "dependencies": {
        "axios": "^0.16.2",
        "base-64": "^0.1.0",
        "brace": "^0.10.0",
        "classnames": "^2.2.5",
        "fast-json-patch": "^2.0.4",
        "flexybox": "^0.7.0",
        "history": "^4.6.3",
        "i18next": "^8.4.3",
        "i18next-browser-languagedetector": "^2.0.0",
        "i18next-localstorage-cache": "^1.1.1",
        "i18next-xhr-backend": "^1.4.2",
        "lodash": "^4.17.4",
        "material-design-icons": "^3.0.1",
        "moment": "^2.18.0",
        "moment-timezone": "^0.5.13",
        "prop-types": "^15.5.10",
        "query-string": "^4.3.4",
        "react": "^15.6.1",
        "react-ace": "^5.1.1",
        "react-addons-test-utils": "^15.6.0",
        "react-copy-to-clipboard": "^5.0.0",
        "react-dom": "^15.6.1",
        "react-ga": "^2.2.0",
        "react-i18next": "^4.6.4",
        "react-inlinesvg": "^0.6.2",
        "react-intl": "^2.3.0",
        "react-json-tree": "^0.10.9",
        "react-md": "^1.0.17",
        "react-redux": "^5.0.5",
        "react-router-dom": "^4.1.2",
        "react-router-redux": "next",
        "react-test-renderer": "^15.6.1",
        "redux": "^3.7.2",
        "redux-devtools-extension": "^2.13.2",
        "redux-form": "6.7.0",
        "redux-localstorage": "^0.4.1",
        "redux-logger": "^3.0.6",
        "redux-responsive": "^4.3.2",
        "redux-saga": "^0.15.5",
        "redux-thunk": "^2.2.0",
        "reselect": "^3.0.1",
        "sanitize.css": "^5.0.0",
        "styled-components": "^2.1.1",
        "universal-cookie": "^2.0.8",
        "validator": "^8.0.0"
    }
}
